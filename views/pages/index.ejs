<!DOCTYPE html>
<html ng-app="lnr">
<head>
  <% include ../partials/header.ejs %>
  <% include ../partials/js_libraries.ejs %>
</head>

<body>
    <div layout="row" layout-padding ng-controller="lnrChat" style="min-height:100%;" ng-cloak>

        <div layout="column"
             flex="{{100/users.length}}"
             layout-align="space-between stretch"
             ng-repeat="user in users">
            <span class="md-caption">{{user.name}} speaking with {{user.session_information.connected_to.name}}</span>
            <div class="user-card" layout="row">
                <img src="img/avatars/{{user.session_information.connected_to.name}}.jpg" />
                <div layout="column">
                    <span class="md-title">   {{user.session_information.connected_to.name}}</span>
                    <span class="md-subhead"> {{user.session_information.connected_to.position}}</span>
                    <span class="md-caption"> {{user.session_information.connected_to.location}}</span>
                </div>
            </div>

            <md-divider></md-divider>

            <div scroll-glue class="discussion-panel">
                <div>
                    <div ng-repeat="message in user.message_thread"
                         class="animate fade message-wrapper"
                         ng-style="(message.sender === user.name) ? {} : {'text-align':'right'}">
                        <span class="md-caption">{{message.date | date: 'short'}}</span>
                        <span class="md-body-1">{{message.sender}}</span>
                        <br>
                        <span class="md-body-2">{{message.message}}</span>
                    </div>

                    <div class="message-wrapper" ng-if="userTyping.name">
                        <span class="md-caption">{{ userTyping.name }} is writing...</span>
                    </div>
                </div>
            </div>

            <md-divider></md-divider>

            <form layout="row">
                <md-input-container flex-gt-sm="80" flex="100">
                    <label>Message</label>
                    <input type      = "text"
                              ng-model  = "user.message"
                              ng-focus  = "userIsTyping($index,true)"
                              ng-blur   = "userIsTyping($index,false)">
                    </input>
                </md-input-container>
                <md-content flex-gt-sm="20" flex="100">
                    <md-button id="submit"
                               type="submit"
                               ng-click="submitNewMessage(user)"
                               class="md-raised md-primary"
                               ng-disabled="user.message.length == 0">Send</md-button>
                </md-content>
            </form>

        </div>

   </div>

</body>

<script src="http://localhost:35729/livereload.js"></script>

</html>
